<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".SelectFile">

    <TextView
        android:id="@+id/txtReadTitle"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/txtReadTitle"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtReadInfo"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:text="@string/txtReadInfo"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edtReadFile"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="250dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FF0000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnReadSelect"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="40dp"
        android:text="@string/btnReadSelect"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtReadResult"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="40dp"
       android:text="@string/txtReadResult"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnReadEnd"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="40dp"
        android:text="@string/btnReadEnd"
        android:textSize="24sp" />

</RelativeLayout>
